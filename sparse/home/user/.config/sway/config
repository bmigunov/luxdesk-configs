exec kanshi
exec swaybg --color '#ffffff' --mode fit --image ~/Pictures/wallpaper
exec mako
exec dbus-update-activation-environment --all
exec /usr/libexec/xdg-desktop-portal -r
exec /usr/libexec/xdg-desktop-portal-wlr -r

