# GENERAL OPTIONS
set header_cache     = ~/.cache/mutt/gmail.com/cache/headers
set message_cachedir = ~/.cache/mutt/gmail.com/cache/bodies
unset record

# RECEIVE OPTIONS
set imap_check_subscribed
unset imap_passive
set imap_keepalive = 900
set mail_check     = 1800

# REMOTE GMAIL FOLDERS
set folder    = 'imaps://imap.gmail.com:993'
set spoolfile = '+INBOX'
set postponed = '+[Gmail]/Черновики'

# SEND OPTIONS
set realname  = $my_name
set from      = $my_borbocomb_gmail_user
set smtp_url  = 'smtps://'$my_borbocomb_gmail_user'@smtp.gmail.com:465/'
set smtp_pass = $my_borbocomb_gmail_pass
